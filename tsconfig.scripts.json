{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "src",
    "node_modules",
    "dist"
  ]
}